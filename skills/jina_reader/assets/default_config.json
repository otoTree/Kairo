json
{
    "name": "jina_reader",
    "version": "1.0.0",
    "description": "A Jina-based document reader that extracts and processes content from various sources",
    "author": "Skill Developer",
    "license": "MIT",
    "input_schema": {
        "type": "object",
        "properties": {
            "url": {
                "type": "string",
                "description": "URL of the document to read"
            },
            "max_length": {
                "type": "integer",
                "description": "Maximum length of extracted content (in characters)",
                "default": 5000
            },
            "include_metadata": {
                "type": "boolean",
                "description": "Whether to include metadata in the output",
                "default": true
            },
            "format": {
                "type": "string",
                "description": "Output format preference",
                "enum": ["plain", "markdown", "html"],
                "default": "plain"
            }
        },
        "required": ["url"]
    },
    "output_schema": {
        "type": "object",
        "properties": {
            "content": {
                "type": "string",
                "description": "Extracted and processed content from the document"
            },
            "metadata": {
                "type": "object",
                "description": "Document metadata including title, author, etc.",
                "additionalProperties": true
            },
            "source_url": {
                "type": "string",
                "description": "Original source URL"
            },
            "processing_time": {
                "type": "number",
                "description": "Time taken to process the document in seconds"
            },
            "success": {
                "type": "boolean",
                "description": "Whether the operation was successful"
            },
            "error_message": {
                "type": "string",
                "description": "Error message if operation failed"
            }
        },
        "required": ["content", "success", "source_url"]
    },
    "config": {
        "timeout": 30,
        "user_agent": "Mozilla/5.0 (compatible; JinaReader/1.0)",
        "max_retries": 3,
        "clean_html": true,
        "remove_scripts": true,
        "extract_images": false,
        "language": "auto"
    },
    "examples": [
        {
            "name": "Read blog post",
            "input": {
                "url": "https://example.com/blog/post",
                "max_length": 3000,
                "format": "markdown"
            }
        },
        {
            "name": "Read news article",
            "input": {
                "url": "https://news.example.com/article",
                "include_metadata": true,
                "max_length": 5000
            }
        }
    ]
}